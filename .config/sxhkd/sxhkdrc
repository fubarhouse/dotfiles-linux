# WM INDEPENDENT KEYBINDINGS

# make sxhkd reload its configuration files:
alt + shift + c
    pkill -USR1 -x sxhkd

# alternate between the tiled and monocle layout
# super + m
# bspc desktop -l next

# Set the window state
alt + {t,shift + d,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Close focused
alt + shift + q
	bspc node -c

# Volume Controls

alt + KP_Add
    pactl set-sink-volume @DEFAULT_SINK@ +1%
alt + KP_Subtract
    pactl set-sink-volume @DEFAULT_SINK@ -1%
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +2%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -2%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Switch to workspace (Number buttons)
alt + {1-9,0}
    bspc desktop -f '^{1-9,10}'
# Switch to workspace (Keypad buttons)
alt + shift + KP_1
    bspc desktop -f '^1'
alt + shift + KP_2
    bspc desktop -f '^2'
alt + shift + KP_3
    bspc desktop -f '^3'
alt + shift + KP_4
    bspc desktop -f '^4'
alt + shift + KP_5
    bspc desktop -f '^5'
alt + shift + KP_6
    bspc desktop -f '^6'
alt + shift + KP_7
    bspc desktop -f '^7'
alt + shift + KP_8
    bspc desktop -f '^8'
alt + shift + KP_9
    bspc desktop -f '^9'
alt + shift + KP_0
    bspc desktop -f '^10'

# Move focused container to workspace
alt + shift + {1-9,0}
      bspc node -d '^{1-9,10}'

# System Lock
alt + shift + l
    $HOME/.config/lock/lock --pixelate
    #i3lock-fancy -gpf Fira\ Code

# Applications....
alt + d
	rofi -show drun
alt + Tab
	rofi -show window
alt + Return
	termite -e /usr/bin/bash
alt + b
    /usr/bin/firefox
alt + alt + j
    joplin
alt + p
    polo-gtk
alt + shift + e
	bspc quit
alt + space
    ibus emoji

alt + shift + r
    polybar-msg cmd restart

# Move a floating windowUp

# focus the next/previous node
#alt + {Up,Down}
#	bspc node -f {prev,next}.local.!above
alt + {Up,Down,Left,Right}
	/home/karl/.config/sxhkd/focusmover {north,south,west,east}

# Different style of movement: transplant into window in chosen direction
alt + shift + {Left,Down,Up,Right}
	/home/karl/.config/sxhkd/euclid_mover {west,south,north,east}

#alt + shift + {Left,Down,Up,Right}
#    bspc window -w {left.manual,down.manual,up.manual,right.manual}

# TODO
# Additional audio keyboard keys
# XF86Audio{Stop,Prev,Next,Play}
# mpc {stop,prev,next,toggle}

XF86AudioPlay
    playerctl -p headset play-pause
XF86AudioNext
    playerctl -p headset next
XF86AudioPrev
    playerctl -p headset previous

#XF86Tools
#XF86Launch5

# Flameshot
alt + Print
    flameshot gui

# Move floating window.
alt + shift + {Left,Down,Up,Right}
	if capsenabled; then step=100; else step=20; fi; \
	[ -z "$(bspc query -N -n focused.tiled)" ] && {\
		bspc node -s west  || bspc node -v -$step 0, \
		bspc node -s south || bspc node -v 0 $step,  \
		bspc node -s north || bspc node -v 0 -$step, \
		bspc node -s east  || bspc node -v $step  0  \
	}

# start move/resize
alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
alt + @button{1-3}
    bspc pointer -u