# WM INDEPENDENT KEYBINDINGS

# make sxhkd reload its configuration files:
alt + shift + c
    pkill -USR1 -x sxhkd

# alternate between the tiled and monocle layout
# super + m
# bspc desktop -l next

# Set the window state
alt + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Close focused
alt + shift + q
	bspc node -c

# Volume Controls
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +2%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -2%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Switch to workspace
alt + {1-9,0}
      bspc desktop -f '^{1-9,10}'

# Move focused container to workspace
alt + shift + {1-9,0}
      bspc node -d '^{1-9,10}'

# System Lock
alt + shift + l
    i3lock-fancy -gpf Fira\ Code

# Applications....
alt + d
	rofi -show run
alt + Tab
	rofi -show window
alt + Return
	termite -e /usr/bin/bash
alt + b
    /usr/bin/firefox
alt + alt + j
    joplin
alt + p
    polo-gtk
alt + shift + e
	bspc quit
alt + space
    ibus emoji

# Move a floating window
#alt + shift + {Left,Down,Up,Right}
#    bspc node -v {-20 0,0 20,0 -20,20 0}

# focus the next/previous node
#alt + {Up,Down}
#	bspc node -f {prev,next}.local.!above
alt + {Up,Down,Left,Right}
	$HOME/bin/focusmover {north,south,west,east}

# Different style of movement: transplant into window in chosen direction
alt + shift + {Left,Down,Up,Right}
	/home/karl/.config/sxhkd/euclid_mover {west,south,north,east}

#alt + shift + {Left,Down,Up,Right}
#    bspc window -w {left.manual,down.manual,up.manual,right.manual}

